{
  "name": "@specs-feup/extended-task-graph",
  "version": "1.0.0",
  "author": "Tiago Lascasas Santos <tiagolascasas@outlook.com> (https://tiagolascasas.dev)",
  "description": "An Extended Task Graph (ETG) implementation for the Clava C/C++ to C/C++ source-to-source compiler",
  "type": "module",
  "private": false,
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf node_modules package-lock.json dist/ woven_code/ output/",
    "lint": "eslint .",
    "docs": "typedoc",
    "simple:appdump": "clava dist/test/simple-use-cases/AppDumping.js -- clang inputs/edgedetect-transformed/",
    "simple:transflow": "clava dist/test/simple-use-cases/CodeTransformationFlow.js -- clang inputs/edgedetect/",
    "simple:etg": "clava dist/test/simple-use-cases/TaskGraphGeneration.js -- clang inputs/edgedetect-transformed/",
    "simple:etgflow": "clava dist/test/simple-use-cases/TaskGraphFlow.js -- clang inputs/edgedetect-transformed/",
    "simple:allflows": "clava dist/test/simple-use-cases/AllFlows.js -- clang inputs/edgedetect/",
    "simple:merging": "clava dist/test/simple-use-cases/TaskMerging.js -- clang inputs/edgedetect/",
    "simple:splitting": "clava dist/test/simple-use-cases/TaskSplitting.js -- clang inputs/edgedetect/",
    "simple:clustering": "clava dist/test/simple-use-cases/ClusterCreation.js -- clang inputs/edgedetect-transformed/",
    "local": "npx clava dist/test/local-apps-testing/TestAnyApp.js -- clang inputs/edgedetect/",
    "local:spam-filter": "npx clava dist/test/local-apps-testing/TestSpamFilter.js -- clang inputs/spam-filter/",
    "local:disparity-region": "npx clava dist/test/local-apps-testing/TestDisparityRegion.js -- clang inputs/disparity-region/",
    "local:disparity-static": "npx clava dist/test/local-apps-testing/TestDisparityMallocStatic.js -- clang inputs/disparity-malloc-static/",
    "local:llama2": "clava classic dist/test/local-apps-testing/TestLlama2.js -p inputs/llama2/ -std c11",
    "local:external-calls": "clava classic dist/test/local-apps-testing/TestExternalCallsApp.js -p inputs/external-calls/ -std c11 -ncg",
    "bench:apps": "npx clava dist/test/benchmark-testing/TestApps.js",
    "bench:rodinia": "clava dist/test/benchmark-testing/TestRodinia.js",
    "bench:rosetta": "clava classic dist/test/benchmark-testing/TestRosetta.js -nci -nw"
  },
  "exports": {
    "./ExtendedTaskGraphAPI": "./dist/src/api/ExtendedTaskGraphAPI.js",
    "./TransFlowConfig": "./dist/src/api/TransFlowConfig.js",
    "./OutputDirectories": "./dist/src/api/OutputDirectories.js",
    "./GenFlowConfig": "./dist/src/api/GenFlowConfig.js",
    "./TaskGraph": "./dist/src/taskgraph/TaskGraph.js",
    "./DotConverter": "./dist/src/taskgraph/dotfile/DotConverter.js",
    "./ConcreteTask": "./dist/src/taskgraph/tasks/ConcreteTask.js",
    "./RegularTask": "./dist/src/taskgraph/tasks/RegularTask.js",
    "./ExternalTask": "./dist/src/taskgraph/tasks/ExternalTask.js",
    "./GlobalTask": "./dist/src/taskgraph/tasks/GlobalTask.js",
    "./SourceTask": "./dist/src/taskgraph/tasks/SourceTask.js",
    "./SinkTask": "./dist/src/taskgraph/tasks/SinkTask.js",
    "./Task": "./dist/src/taskgraph/tasks/Task.js",
    "./ExternalTaskDataPolicy": "./dist/src/taskgraph/tasks/ExternalTaskDataPolicy.js",
    "./TaskType": "./dist/src/taskgraph/tasks/TaskType.js",
    "./Cluster": "./dist/src/taskgraph/Cluster.js",
    "./ClusterExtractor": "./dist/src/taskgraph/transforms/ClusterExtractor.js",
    "./TaskExtractor": "./dist/src/taskgraph/transforms/TaskExtractor.js",
    "./TaskMerger": "./dist/src/taskgraph/transforms/TaskMerger.js",
    "./TaskSplitter": "./dist/src/taskgraph/transforms/TaskSplitter.js",
    "./AStage": "./dist/src/AStage.js",
    "./SubsetTransforms": "./dist/src/preprocessing/subset/SubsetTransforms.js"
  },
  "dependencies": {
    "@specs-feup/clava": "^3.0.8",
    "@specs-feup/lara": "^3.0.5",
    "@specs-feup/clava-code-transforms": "^1.2.0",
    "chalk": "^5.3.0",
    "fs": "^0.0.1-security",
    "path": "^0.12.7",
    "winston": "^3.15.0"
  },
  "files": [
    "dist/src"
  ],
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@jest/globals": "^29.7.0",
    "@specs-feup/clava-lite-benchmarks": "^1.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.7.5",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.6.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "globals": "^15.11.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.2",
    "typedoc": "^0.26.4",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.9.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/specs-feup/extended-task-graph.git"
  }
}
